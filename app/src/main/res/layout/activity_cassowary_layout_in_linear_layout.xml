<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.agens.cassowarylayoutdemo.CassowaryLayoutInLinearLayout"
    android:orientation="vertical">

    <TextView
        android:text="@string/text_view_in_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"/>

    <no.agens.cassowarylayout.CassowaryLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="no.agens.cassowarylayoutdemo.XmlLayoutDemo"
        app:constraints="@array/red_green_blue_layout">

        <View
            android:id="@+id/green"
            android:background="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/red"
            android:background="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/blue"
            android:background="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </no.agens.cassowarylayout.CassowaryLayout>

    <TextView
        android:text="@string/text_view_in_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"/>
</LinearLayout>
