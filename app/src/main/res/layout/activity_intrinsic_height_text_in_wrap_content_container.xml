<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cassowary="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.agens.cassowarylayoutdemo.CassowaryLayoutWrapContentActivity"
    android:background="@color/light_gray"
    >

    <no.agens.cassowarylayout.CassowaryLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="no.agens.cassowarylayoutdemo.XmlLayoutDemoActivity"
        cassowary:constraints="@array/intrinsic_height_text_in_wrap_content_container"
        android:background="@color/dark_gray"
        android:padding="@dimen/default_padding">

        <TextView
            android:id="@+id/text"
            android:background="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/long_paragraph"/>

        <TextView
            android:id="@+id/text2"
            android:background="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/long_paragraph"/>


    </no.agens.cassowarylayout.CassowaryLayout>


</FrameLayout>
